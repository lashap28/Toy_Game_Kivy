
<MenuWidget>:
    canvas.before:
        Color:
            rgba: 0, 0, 0, .8
        Rectangle:
            size: self.size

    Label:
        font_size: dp(45)
        font_name: 'Sackers Gothic Light AT.otf'
        text: root.parent.menu_title
        pos_hint: {"center_x": .5, "center_y": .6}
    Button:
        text: root.parent.menu_buttontitle
        pos_hint: {"center_x": .5, "center_y": .35}
        size_hint: .2, .15
        on_press: root.parent.on_menu_button_pressed()
        background_normal: ''
        background_color: 1, .3, .4, .8